{
  "name": "image-converter",
  "version": "0.1.1",
  "private": true,
  "homepage": "./",
  "main": "./public/electron.js",
  "build": {
    "productName": "Image Converter",
    "appId": "org.sss.electron-react",
    "icon": "build/icon.icns",
    "asar": false
  },
  "scripts": {
    "react-start": "env-cmd -f .env.development craco start",
    "react-build": "craco build",
    "react-test": "craco test",
    "react-eject": "craco eject",
    "start:react": "cross-env PORT=8000 NODE_ENV=development BROWSER=none npm run react-start",
    "start:electron": "wait-on http://localhost:8000 && electron .",
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "build": "npm run react-build && electron-builder --publish=never"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.3",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.39",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "class-transformer": "^0.5.1",
    "electron-is-dev": "^2.0.0",
    "ffmpeg-static-electron": "^2.0.3",
    "ffprobe-static-electron": "^2.0.2",
    "fluent-ffmpeg": "^2.1.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-scripts": "5.0.1",
    "recoil": "^0.7.7",
    "sharp": "^0.32.4",
    "typescript": "^4.9.5",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@craco/craco": "^7.1.0",
    "@types/fluent-ffmpeg": "^2.1.21",
    "@types/uuid": "^9.0.2",
    "concurrently": "^8.2.0",
    "craco": "^0.0.3",
    "cross-env": "^7.0.3",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "env-cmd": "^10.1.0",
    "wait-on": "^7.0.1"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
